<%= form_with(model: diagnosis, local: true) do |form| %>
  <% if diagnosis.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(diagnosis.errors.count, "error") %> prohibited this diagnosis from being saved:</h2>

      <ul>
      <% diagnosis.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :symptoms %>
    <%= form.text_field :symptoms %>
  </div>

  <div class="field">
    <%= form.label :level %>
    <select name="level">
      <option value="Leve" selected="selected">Leve</option>
      <option value="Grave">Grave</option>
      <option value="Muy Grave">Muy Grave</option>
    </select>
  </div>

  <div class="field">
    <%= form.label :observations %>
    <%= form.text_field :observations %>
  </div>

  <div class="field">
    <%= form.label :id_treatments %>
    <%= form.text_field :id_treatments %>
    *Leave a space between id's
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
