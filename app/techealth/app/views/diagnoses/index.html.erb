<p id="notice"><%= notice %></p>

<h1>Diagnoses</h1>

<table>
  <thead>
    <tr>
      <th>Id diagnose</th>
      <th>Name</th>
      <th>Symptoms</th>
      <th>Level</th>
      <th>Observations</th>
      <th>Id treatments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @diagnoses.each do |diagnosis| %>
      <tr>
        <td><%= diagnosis.id_diagnose %></td>
        <td><%= diagnosis.name %></td>
        <td><%= diagnosis.symptoms %></td>
        <td><%= diagnosis.level %></td>
        <td><%= diagnosis.observations %></td>
        <td><%= diagnosis.id_treatments %></td>
        <td><%= link_to 'Show', diagnosis %></td>
        <td><%= link_to 'Edit', edit_diagnosis_path(diagnosis) %></td>
        <td><%= link_to 'Destroy', diagnosis, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

