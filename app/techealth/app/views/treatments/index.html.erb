<p id="notice"><%= notice %></p>

<h1>Treatments</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Dosis</th>
      <th>Total</th>
      <th>Id patient</th>
      <th>Secundary effects</th>
      <th>Days</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @treatments.each do |treatment| %>
      <tr>
        <td><%= treatment.name %></td>
        <td><%= treatment.type %></td>
        <td><%= treatment.dosis %></td>
        <td><%= treatment.total %></td>
        <td><%= treatment.id_patient %></td>
        <td><%= treatment.secundary_effects %></td>
        <td><%= treatment.days %></td>
        <td><%= link_to 'Show', treatment %></td>
        <td><%= link_to 'Edit', edit_treatment_path(treatment) %></td>
        <td><%= link_to 'Destroy', treatment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

