<%= form_with(model: appointment_patient, local: true) do |form| %>
  <% if appointment_patient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(appointment_patient.errors.count, "error") %> prohibited this appointment_patient from being saved:</h2>

      <ul>
      <% appointment_patient.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :area %>
    <select name="area">
      <option value="Administrativa" selected="selected">Administrativa</option>
      <option value="Emergencias">Emergencias</option>
      <option value="Ginecologia">Ginecologia</option>
      <option value="Oncologia">Oncologia</option>
      <option value="Dermatologia">Dermatologia</option>
      <option value="Ortopedia">Ortopedia</option>
    </select>
  </div>

  <div class="field">
    <%= form.label :app_date %>
    <%= form.datetime_select :app_date %>
  </div>

  <div class="field">
    <%= form.label :observation %>
    <%= form.text_field :observation %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <select name="status">
      <option value="Registrada" selected="selected">Registrada</option>
    </select>
  </div>

  <div class="field">
    <%= form.label :id_patient %>
    <%= form.number_field :id_patient, :readonly => true, :value => @id_patient_actual %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
