<p id="notice"><%= notice %></p>

<h1>Patient</h1>
Hi <%= @actual_user.name %>!
<br>

<br>
<h1>Appointments</h1>
<form action = "/appointment_patients/index2" >
  <input type="hidden" name="id" value="<%= @id_patient_actual %>">
  <input type="hidden" name="initial_date" value="1900-1-1">
  <input type="hidden" name="final_date" value="2100-1-1">
  <input type="submit" value="Show all"/>
</form>

<table>
  <thead>
    <tr>
      <th>Id appointment</th>
      <th>Area</th>
      <th>App date</th>
      <th>Observation</th>
      <th>Status</th>
      <th>Id patient</th>
      <th>Id diagnoses</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointment_patients.each do |appointment_patient| %>
      <tr>
        <td><%= appointment_patient.id_appointment %></td>
        <td><%= appointment_patient.area %></td>
        <td><%= appointment_patient.app_date %></td>
        <td><%= appointment_patient.observation %></td>
        <td><%= appointment_patient.status %></td>
        <td><%= appointment_patient.id_patient %></td>
        <td><%= appointment_patient.id_diagnoses %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<form action = "/appointment_patients/index2" >
  <br>
  <input type="hidden" name="id" value="<%= @id_patient_actual %>" >
  <br>
  Please enter initial date. (yyyy-mm-dd)
  <br>
  <input type="text" name="initial_date">
  <br>  
  Please enter final date. (yyyy-mm-dd)
  <br>  
  <input type="text" name="final_date">
  <br>
  <input type="submit" value="Filter by date"/>
</form>

<br>

<form action = "/appointment_patients/index3" >
  <br>
  <input type="hidden" name="id" value="<%= @id_patient_actual %>">
  <br>
  Please enter status of appointment to filter
  <br>
  <select name="status">
      <option value="Registrada" selected="selected">Registrada</option>
      <option value="Cancelada por paciente">Cancelada por paciente</option>
      <option value="Cancelada por centro medico">Cancelada por centro medico</option>
      <option value="Asignada">Asignada</option>
      <option value="Realizada">Realizada</option>
    </select>  
  <input type="submit" value="Filter by status"/>
</form>

<br>

<form action = "/appointment_patients/index4">
  <br>
  <input type="hidden" name="id" value="<%= @id_patient_actual %>">
  <br>
  Please enter area of appointment to filter
  <br>
  <select name="area">
      <option value="Administrativa" selected="selected">Administrativa</option>
      <option value="Emergencias">Emergencias</option>
      <option value="Ginecologia">Ginecologia</option>
      <option value="Oncologia">Oncologia</option>
      <option value="Dermatologia">Dermatologia</option>
      <option value="Ortopedia">Ortopedia</option>
    </select> 
  <input type="submit" value="Filter by area"/>
</form>

<br>

<form action = "/appointment_patients/delete_app" >
  <br>
  <input type="hidden" name="id" value="<%= @id_patient_actual %>">
  <br>
  Please enter appointment to cancel
  <br>
  <input type="text" name="app_id">
  <br>  
  <input type="submit" value="Cancel"/>
</form>

<br>

<form action = "/appointment_patients/show" >
  <br>
  <input type="hidden" name="id_patient_actual" value="<%= @id_patient_actual %>">
  <br>
  Show information of the appointment id:
  <br>
  <input type="text" name="app_id">
  <br>  
  <input type="submit" value="Show"/>
</form>

<%= link_to 'New Appointment Patient', 
  :controller => 'appointment_patients',
  :action => 'new',
  :id_patient_actual => @id_patient_actual %>

  <strong><h3><%= link_to "Log Out", logins_path %> </h3></strong>

