<p id="notice"><%= notice %></p>

<h1>Treatment Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @treatment_types.each do |treatment_type| %>
      <tr>
        <td><%= treatment_type.name %></td>
        <td><%= link_to 'Show', treatment_type %></td>
        <td><%= link_to 'Edit', edit_treatment_type_path(treatment_type) %></td>
        <td><%= link_to 'Destroy', treatment_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

