
/*  Por tipo de tratamiento,
    cantidad de veces asignado y
    promedio de monto */
db.Treatment.aggregate( 
    [
        {
            $group : {
                "_id" : 0,
                "count" : {
                    $sum : 1
                },
                "average" : {
                    $avg : "$total"
                }
            }
        }
    ]
)

/*  Rango de diagnosticos */
db.appointments.aggregate(
    [
        {
            $group : {
                "_id" : "$id_patient",
                "count" : {
                    $push : {
                        $size : "$id_diagnoses"
                    }
                }
            }
        },
        {
            $project : {
                "_id" : 0,
                "patient" : "$_id",
                "max" : {
                    $max : "$count"
                },
                "min" : {
                    $min : "$count"
                }
            }
        }
    ]
)


/*  Enfermedad m√°s diagnosticada con
    cantidad de veces que ha sido asignada*/
db.appointments.aggregate(
    [
        {
            $project : {
                "_id" : 0,
                "id_diagnoses" : 1
            }
        },
        {
            $unwind : "$id_diagnoses"
        },
        {
            $lookup : {
                from : "diagnoses",
                localField : "id_diagnoses.id",
                foreignField : "id_diagnose",
                as : "illness"
            }
        },
        {
            $group : {
                "_id" : "$illness.name",
                "count" : {
                    "$sum" : 1
                }
            }
        },
        {
            $unwind : "$_id"
        },
        {
            $sort : {
                "count" : -1
            }
        }
    ]
)

