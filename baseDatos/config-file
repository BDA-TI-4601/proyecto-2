sharding:
  clusterRole: configsvr
replication:
  replSetName: test-replica
storage:
  dbPath: ./db

in server machine:
sudo mongod --configsvr --bind_ip localhost, mongodb-1 --replSet replica-test --logpath "replica-test.log" --dbpath /home/virtual-pc/mongo-config/db --host mondodb-1 --port 27019 --smallfiles --oplogSize 64 --fork

in node machine:
sudo mongod --logpath "db-node-1.log" --dbpath /home/virtual-pc/mongo-config/db --port 27019 --smallfiles --oplogSize 64 --fork